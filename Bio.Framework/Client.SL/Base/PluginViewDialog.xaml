<hctrls:FloatableWindow x:Class="Bio.Framework.Client.SL.PluginViewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:hctrls="clr-namespace:Bio.Helpers.Controls.SL;assembly=Bio.Helpers.Controls.SL"
    Width="640" Height="480" IsTabStop="False">
  <hctrls:FloatableWindow.Resources>
    <Style x:Key="DialogBtnStyle" TargetType="Button">
      <Setter Property="Margin" Value="0,6,6,6"/>
      <Setter Property="Width" Value="75"/>
      <Setter Property="Height" Value="23"/>
      <Setter Property="Cursor" Value="Hand"/>
    </Style>

  </hctrls:FloatableWindow.Resources>
  <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <ContentControl Grid.Row="0" x:Name="contentControlPart" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" 
                    VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" IsTabStop="False" Margin="2" />
    <StackPanel Grid.Row="1" Orientation="Horizontal" FlowDirection="RightToLeft" x:Name="buttonsPanel">
      <!--<Button x:Name="CancelButton" Content="Отмена" Style="{StaticResource DialogBtnStyle}"/>
      <Button x:Name="OKButton" Content="ОК" Style="{StaticResource DialogBtnStyle}"/>-->
    </StackPanel>
  </Grid>
</hctrls:FloatableWindow>
